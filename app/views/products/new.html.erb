<h1>New Product</h1>

<%= form_with model: @product do |form| %>
<%#= form_with(@product, :html => { :multipart => true }) do |form| %>
  <div>
    <%= form.label :product_name %><br>
    <%= form.text_field :product_name %>
    <% @product.errors.full_messages_for(:product_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
   <div>
    <%= form.label :company_name %><br>
    <%= form.text_field :company_name %>
    <% @product.errors.full_messages_for(:company_name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
   <div>
    <%= form.label :description %><br>
    <%= form.text_field :description %>
    <% @product.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :seller_email %><br />
    <%= form.email_field :seller_email %>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.number_field :price %><br>
    <% @product.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :avatar %><br>
    <%= form.file_field :avatar %><br> 
  </div>
    <%= form.submit %>
  </div>
<% end %>
